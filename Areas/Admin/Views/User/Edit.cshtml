@model CafeMenu.Models.User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Kullanıcı Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifreyi değiştirmek için yeni şifre girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">Şifreyi değiştirmek istemiyorsanız boş bırakın.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <input type="text" class="form-control" value="@(Model.IsAdmin ? "Yönetici" : "Kullanıcı")" readonly />
                            <div class="form-text">Rol, kullanıcı adına göre otomatik belirlenir. 'admin' kullanıcı adı yönetici rolüne sahiptir.</div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 