@model List<CafeMenu.Models.User>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kullanıcılar</h1>
        <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Kullanıcı
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı Adı</th>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Rol</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.UserName</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>@(user.IsAdmin ? "Yönetici" : "Kullanıcı")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger ms-1">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 