@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "_AdminLayout";
}

<div class="container">
    <h1 class="mb-4">Kafe Menü Yönetim Paneli</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcılar</h5>
                    <p class="card-text">Kullanıcı hesaplarını yönetin.</p>
                </div>
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Kategoriler</h5>
                    <p class="card-text">Menü kategorilerini yönetin.</p>
                </div>
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Ürünler</h5>
                    <p class="card-text">Menü ürünlerini yönetin.</p>
                </div>
                <div class="card-footer">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-outline-primary mb-2 w-100">
                            <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-outline-success mb-2 w-100">
                            <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 