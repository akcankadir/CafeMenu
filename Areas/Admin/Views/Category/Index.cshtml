@model List<CafeMenu.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kategoriler</h1>
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Kategori
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Üst Kategori</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td>@category.CategoryName</td>
                                <td>@(string.IsNullOrEmpty(category.ParentCategoryName) ? "-" : category.ParentCategoryName)</td>
                                <td>@category.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger ms-1">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 